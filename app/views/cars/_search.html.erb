<%= search_form_for @q, url: cars_path, method: :get do |f| %>
  <div class="search-form-control form-group m-2">
    <%= f.label :location_cont, 'Location' %>
    <%= f.search_field :location_cont, class: "form-control string required" %>

    <%= f.label :start_date_gteq, 'Start date' %>
    <%= f.date_field :start_date_gteq, class: "form-control string required" %>

    <%= f.label :end_date_lteq, 'End date' %>
    <%= f.date_field :end_date_lteq, class: "form-control string required" %>

    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Rechercher
    </button>
  </div>
<% end %>
