<ul class="d-flex flex-wrap m-auto">

<% @cars.each do |car| %>
<li class="list-group-item">
  <div class="card m-2 align-self-stretch" style="width: 20rem">
   <% if car.photo.attached? %>
      <%= cl_image_tag car.photo.key, alt: "photo de la voiture", class: "img-fluid rounded mx-auto d-block" %>
      <% end %>
    <%# <%= image_tag car.image_url, alt: "car photo", %>
    <div class="card-body">
      <h5 class="card-title"><%= car.model %></h5>
      <p><%= car.brand %></p>
      <p class="card-text"><%= car.rate%></p>
      <%= link_to "Voir +", car_path(car), class: "btn btn-success" %>
    </div>
  </div>
</li>
<% end %>

</ul>

