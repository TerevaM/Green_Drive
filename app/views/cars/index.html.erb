<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group m-2">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
<br>
<h1 class="h1 m-2">Voitures Disponibles</h1>
<br>
<ul class="d-flex flex-wrap m-auto">

<% @cars.each do |car| %>
<li class="list-group-item">
  <div class="card m-2 align-self-stretch" style="width: 20rem">
    <%= image_tag car.image_url, alt: "car photo", class: "img-fluid rounded mx-auto d-block"%>
    <div class="card-body">
      <h5 class="card-title"><%= car.model %></h5>
      <p><%= car.brand %></p>
      <p class="card-text"><%= car.description %></p>
      <%= link_to "Voir +", car_path(car), class: "btn btn-success" %>
    </div>
  </div>
</li>
<% end %>

</ul>
