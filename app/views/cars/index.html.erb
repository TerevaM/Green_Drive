<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group m-2">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<h1>Voitures Disponibles</h1>

<ul class="d-flex ">

<% @cars.each do |car| %>
<li>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= car.image_url %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= car.model %></h5>
      <p><%= car.brand %></p>
      <p class="card-text"><%= car.description %></p>
      <%= link_to 'details', car_path(car) %>
    </div>
  </div>
</li>
<% end %>

</ul>
