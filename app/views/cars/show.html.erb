<% if policy(@car).edit? %>
  <%= link_to "Modifier les détails", edit_car_path(@car), class: "btn btn-info" %> |
<% end %>
<%= button_to "Supprimer la voiture", @car, method: :delete if policy(@car).destroy? %>
