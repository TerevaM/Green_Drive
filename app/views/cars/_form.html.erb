  <%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :model, label: 'Modèle' %>
    <%= f.input :brand, label: 'Marque' %>
    <%= f.input :color, label: 'Couleur' %>
    <%= f.input :year, :collection => 2012..2023, label: 'Année de construction' %>
    <%= f.input :number_of_seats, :collection => 1..9, label: 'Nombre de sièges' %>
    <%= f.input :description, label: 'Description' %>
    <%= f.input :availability, label: 'Disponibilités' %>
    <%= f.input :rate , label: 'Prix par jour'%>
    <%# changer l'image url en download image %>
    <%= f.input :photo, as: :file, label: 'Ajouter une photo' %>
         <%# input_html: { multiple: true} %>

    <%= f.submit 'Enregistrer', class: "btn btn-success" %>

  <% end %>
