<div class="home">
  <section class="presentation">
    <div class="home_title">
      <h1> Green Drive </h1>
      <h5>La première plateforme de location de voitures électriques </h5>
    </div>
    <%= render 'cars/search' %>
  </section>

  <div class="w-80 p-3 home-container">
      <h1 id="home-headline">Voitures de location</h1>
      <ul class="green_drive_list_cards">
      <% @cars.each do |car| %>
        <li class="list-group-item green_drive_card">
        <%= car.photos.attached? ? ( cl_image_tag car.photos.first.key, crop: :fill) : image_tag('nowallpaper.jpg') %>
        <div class="green_card_stats card-body">
          <div class="card_header">
            <h5 class="card-title"><%= car.model %> <%= car.brand %></h5>
            <p class="card-text"><%= car.rate%>€/jour
          </div>
          <div class="card-body-text">
            <p><i class="fa-solid fa-location-dot"></i> <%= car.location %></p>
            <%= link_to "Voir +", car_path(car) %></p>
          </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
